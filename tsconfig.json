{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "target": "ESNext",
        "types": ["vite/client"],
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
          "@components/*": ["src/components/*"],
          "@utils/*": ["src/utils/*"],
          "@assets/*": ["src/assets/*"],
          "@pages/*": ["src/pages/*"],
          "@contexts/*": ["src/contexts/*"]
        },
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
 }